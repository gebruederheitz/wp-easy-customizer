{
    "name": "gebruederheitz/wp-easy-customizer",
    "description": "A simplified, object-oriented interface for the Wordpress Customizer.",
    "type": "library",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "Gebruederheitz\\Wordpress\\Customizer\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Andreas Maros",
            "email": "andreas.maros@gebruederheitz.de"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "gebruederheitz/simple-singleton": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "szepeviktor/phpstan-wordpress": "^v1.3.5",
        "johnpbloch/wordpress-core": "^6.6.0"
    },
    "scripts": {
        "lint": "phpstan --memory-limit=2G analyse -c .phpstan.neon"
    }
}
